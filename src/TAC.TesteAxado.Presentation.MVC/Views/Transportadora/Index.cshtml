@model IEnumerable<TAC.TesteAxado.Application.ViewModels.TransportadoraViewModel>

@{
    ViewBag.Title = "Transportadoras";
}

<h2>Transportadoras</h2>

<p>
    <div class="glyphicon glyphicon-plus"></div>
    @Html.ActionLink("Nova", "Create")
</p>
<table class="table">
    <tr>
        <td></td>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Observacao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ativo)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <a class="glyphicon glyphicon-star-empty" href="#" title="Marcar como favorito"></a>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Observacao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ativo)
        </td>
        <td>
            @Html.ActionLink(" ", "Edit", new { id = item.Id }, new { @class = "glyphicon glyphicon-pencil", @title = "Editar" })&nbsp;&nbsp;&nbsp;
            @Html.ActionLink(" ", "Details", new { id = item.Id }, new { @class = "glyphicon glyphicon-list", @title = "Detalhar" })&nbsp;&nbsp;&nbsp;
            @Html.ActionLink(" ", "Delete", new { id = item.Id }, new { @class = "glyphicon glyphicon-trash", @title = "Excluir" })
        </td>
    </tr>
}
</table>